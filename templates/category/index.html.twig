{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les Catégories : </h1>
    {% for category in categories %}
       <p> {{ category.name }}
        <a href="{{ path("app_category_show", { categoryName: category.name }) }}">Voir les programmes associés</a>
       </p>
    {% endfor %}

    <a href="{{ path('new') }}">
        <h3> Ajouter une catégorie</h3>
    </a>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}