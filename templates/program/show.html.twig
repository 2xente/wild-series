{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }}</li>
            <a href="{{ path('app_actor_show', {id: actor.id}) }}">Show Actor</a>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

        {% for season in seasons %}
            <div>
      <h2>Saison :  {{ season.number }}</h2>
          <h3> {{ season.year }}</h3>
         <p>  {{ season.description }}</p>
                <a href="{{ path("app_program_season_show", { program: program.id , season: season.id }) }}">Voir la Saison</a>

            </div>
        {% endfor %}




    <a href="{{ path('app_program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}